# Document source: "mock" (local files) or "live" (SharePoint)
DOCUMENT_SOURCE_MODE=mock

# OpenAI via Portkey (Bain)
OPENAI_API_KEY=your-portkey-api-key
OPENAI_BASE_URL=https://portkey.bain.dev/v1
OPENAI_MODEL=@personal-openai/gpt-4o

# MS Graph credentials (only required for DOCUMENT_SOURCE_MODE=live)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
SHAREPOINT_SITE_ID=

# Use simple OpenAI agent instead of CAMEL (fallback option)
USE_SIMPLE_AGENT=false

# Server config
BACKEND_PORT=8000
CORS_ORIGINS=["http://localhost:5173"]

# Frontend (prefix with VITE_ for Vite to expose)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
